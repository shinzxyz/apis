@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap');

:root {
    --primary: #a8e6cf;
    --secondary: #dcedc1;
    --accent: #ffaaa5;
    --dark: #465a64;
    --text: #2d3436;
    --pixel-border: 4px solid #465a64;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    background-color: var(--secondary);
    color: var(--text);
    margin: 0;
    padding: 20px;
    line-height: 1.6;
    font-weight: 400;
}

.container {
    max-width: 800px;
    margin: 0 auto;
    background-color: var(--primary);
    padding: 30px;
    border: var(--pixel-border);
    box-shadow: 8px 8px 0 var(--dark);
    border-radius: 8px;
}

.pixel-header {
    text-align: center;
    margin-bottom: 30px;
    border-bottom: var(--pixel-border);
    padding-bottom: 20px;
}

.pixel-header h1 {
    color: var(--dark);
    margin-bottom: 10px;
    font-size: 28px;
    font-weight: 600;
}

.pixel-header p {
    font-size: 16px;
    color: var(--text);
    opacity: 0.8;
}

.upload-container {
    background-color: var(--secondary);
    padding: 25px;
    border: var(--pixel-border);
    margin-bottom: 20px;
    border-radius: 6px;
}

.file-drop-area {
    border: 3px dashed var(--dark);
    border-radius: 6px;
    padding: 40px;
    text-align: center;
    margin-bottom: 20px;
    cursor: pointer;
    transition: all 0.3s;
    font-size: 16px;
}

/* ... (bagian CSS lainnya tetap sama, hanya ubah font-family di elemen yang perlu) ... */

.service-selector h3, .trial-services h3 {
    font-weight: 500;
    font-size: 18px;
    margin-bottom: 15px;
}

/* ... (pastikan tidak ada font pixel yang tersisa) ... */

/* Perbaikan tambahan untuk tampilan yang lebih modern */
.pixel-button {
    font-family: 'Inter', sans-serif;
    font-weight: 500;
    letter-spacing: 0.5px;
}

.result-link {
    font-family: 'Roboto Mono', monospace;
    font-size: 14px;
}